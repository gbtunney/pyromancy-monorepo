{
    "name": "@pyromancy/wp-plugin",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "description": "GBT Utility plugin to demonstrate Vite for WP integration.",
    "scripts": {
        "\n========== BUILD >> ==========": "",
        "build": "pnpm exec vite build",
        "build:ts": "tsc --build",
        "build:gql": "mkdir -p graphql/types && graphql-codegen --config codegen.ts",
        "\n========== DEV >> ==========": "",
        "dev": "vite",
        "inspector": "pnpm dev && pnpm exec 'http://localhost:5173/__unocss'",
        "\n========== TEST >> ==========": "",
        "test": "tsc --build",
        "\n========== COMPOSER >> ==========": "",
        "composer": "pnpm exec composer",
        "composer:install": "pnpm composer install",
        "composer:add": "pnpm composer require <package-name>",
        "composer:update": "pnpm composer:add",
        "composer:cache": "pnpm composer clear-cache",
        "composer:clean:lock": "pnpm exec rm -rf composer.lock",
        "composer:uninstall": "pnpm exec rm -rf vendor && pnpm composer:clean:lock",
        "\n========== PUBLISH >> ==========": "",
        "release": "pnpm prerelease && pnpm publish --access public --report-summary --no-git-checks",
        "prerelease": "pnpm clean && pnpm build && pnpm fix && pnpm check && pnpm test",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build && pnpm composer:clean:lock",
        "clean:ts": "tsc --build --clean",
        "clean:build": "pnpm exec rm -rf dist assets",
        "\n========== CODE STYLE >> ==========": "",
        "prettier": "cross-var prettier {$npm_package_config_prettier_path}.{$npm_package_config_prettier_extensions} --write --ignore-path .gitignore --ignore-path .prettierignore",
        "codesniffer:fix": "cross-var pnpm exec $npm_package_config_codesniffer_formatter --standard=$npm_package_config_codesniffer_standard $npm_package_config_codesniffer_path",
        "codesniffer:check": "cross-var pnpm exec $npm_package_config_codesniffer_linter --standard=$npm_package_config_codesniffer_standard --runtime-set ignore_warnings_on_exit 1 --ignore=./inc/examples/ $npm_package_config_codesniffer_path",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm build:ts",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm prettier",
        "lint": "eslint .",
        "preview": "vite preview"
    },
    "main": "index.js",
    "dependencies": {
        "@fullcalendar/core": "^6.1.17",
        "@fullcalendar/daygrid": "^6.1.17",
        "@fullcalendar/google-calendar": "^6.1.17",
        "@fullcalendar/interaction": "^6.1.17",
        "@fullcalendar/react": "^6.1.17",
        "@iconify-json/carbon": "^1.1.19",
        "googleapis": "^126.0.0",
        "graphql-tag": "^2.12.6",
        "immutable": "^4.3.7",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "windicss": "^3.5.6"
    },
    "devDependencies": {
        "@apollo/client": "^3.13.8",
        "@eslint/js": "^9.29.0",
        "@graphql-codegen/add": "^5.0.0",
        "@graphql-codegen/cli": "5.0.0",
        "@graphql-codegen/typescript": "^4.0.1",
        "@graphql-codegen/typescript-document-nodes": "^4.0.1",
        "@graphql-codegen/typescript-operations": "^4.0.1",
        "@kucrut/vite-for-wp": "^0.12.0",
        "@prettier/plugin-php": "^0.22.4",
        "@snailicide/build-config": "^1.4.2",
        "@snailicide/g-library": "^1.2.0",
        "@types/node": "^20.5.0",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@unocss/reset": "^66.3.2",
        "@vitejs/plugin-react": "^4.5.2",
        "@wordpress/hooks": "^3.40.0",
        "chrono-node": "^2.6.4",
        "cross-env": "^7.0.3",
        "cross-var": "^1.1.0",
        "deepmerge": "^4.3.1",
        "eslint": "^9.29.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.2.0",
        "graphql": "^16.8.0",
        "prettier": "^3.0.2",
        "prettier-plugin-jsdoc": "^1.0.1",
        "prettier-plugin-sh": "^0.18.0",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.34.1",
        "unocss": "^66.3.2",
        "vite": "^7.0.0"
    },
    "config": {
        "codesniffer": {
            "linter": "./vendor/bin/phpcs",
            "formatter": "./vendor/bin/phpcbf",
            "standard": "PSR2",
            "path": "./inc ./*.php"
        },
        "eslint": {
            "extensions": "ts,js,cjs,mjs,tsx,jsx",
            "path": ".es*,*,**/*",
            "config": ".eslintrc.cjs"
        },
        "prettier": {
            "extensions": "php,ts,js,cjs,mjs,cts,json,xml,yaml,yml,graphql,md,tsx,jsx",
            "path": "**/*,*"
        }
    },
    "packageManager": "pnpm@10.9.0+sha512.0486e394640d3c1fb3c9d43d49cf92879ff74f8516959c235308f5a8f62e2e19528a65cdc2a3058f587cde71eba3d5b56327c8c33a97e4c4051ca48a10ca2d5f"
}
