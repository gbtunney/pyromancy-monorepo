{
    "name": "@pyromancy/root",
    "version": "0.0.1",
    "description": "Pyromancy Monorepo",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@github.com:gbtunney/pyromancy-monorepo.git"
    },
    "license": "MIT",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "scripts": {
        "\n========== BUILD >> ==========": "",
        "build": "pnpm --filter='!*/root' build",
        "build:self": "tsc --build",
        "build:ts": "pnpm exec tsc --build",
        "\n========== TEST >> ==========": "",
        "test": "echo '\"\\n===\\n>> Unit Test:: no test specified!'",
        "\n========== COMMIT >> ==========": "",
        "commit": "pnpm run precommit && pnpm exec git-cz",
        "cz": "pnpm exec git-cz",
        "precommit": "pnpm run fix && pnpm run commit:linted",
        "commit:linted": "git add $(git diff HEAD --cached --name-only)",
        "\n========== DEPLOY >> ==========": "",
        "deploy": "pnpm build && pnpm deploy:web",
        "deploy:web": "cross-var scp -r $npm_package_config_deploy_local $npm_package_config_deploy_remote",
        "\n========== CODE STYLE >> ==========": "",
        "lint": "cross-var eslint $npm_package_config_eslint_path.{$npm_package_config_eslint_extensions} --config ./$npm_package_config_eslint_config",
        "prettier": "cross-var prettier {$npm_package_config_prettier_path}.{$npm_package_config_prettier_extensions} --ignore-path ./.gitignore",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm check:self && pnpm -r check",
        "check:self": "pnpm lint",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm fix:self && pnpm -r fix",
        "fix:self": "pnpm prettier --write",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm --filter='*' clean && pnpm run clean:cache",
        "clean:cache": "pnpm --filter='*' composer:cache && pnpm lando:cache",
        "clean:ts": "pnpm exec tsc --build --clean",
        "clean:self": "pnpm clean:cache",
        "\n========== COMPOSER >> ==========": "",
        "composer": "pnpm exec composer",
        "composer:install": "pnpm composer install",
        "composer:add": "pnpm compopnser require <package-name>",
        "composer:update": "pnpm composer:add",
        "composer:cache": "pnpm composer clear-cache",
        "composer:clean:lock": "rm -f composer.lock",
        "composer:uninstall": "pnpm exec rm -rf vendor wep/wp && pnpm composer:clean:lock",
        "\n========== LANDO >> ==========": "",
        "lando": "pnpm exec lando",
        "lando:install": "pnpm lando start --verbose",
        "lando:start": "pnpm lando start",
        "lando:stop": "pnpm lando stop",
        "lando:rebuild": "pnpm lando rebuild --verbose",
        "lando:info": "pnpm lando info",
        "lando:cache": "pnpm lando --clear",
        "lando:destroy": "pnpm lando destroy",
        "\n========== WORDPRESS >> ==========": "",
        "wp:update": "pnpm exec lando wp core update",
        "wp:users": "pnpm exec lando wp user list",
        "\n========== UNINSTALL >> ==========": "",
        "uninstall": "pnpm run clean && pnpm --filter='*' composer:uninstall && pnpm uninstall:list && pnpm run uninstall:rm && pnpm run uninstall:lock",
        "uninstall:list": "find . -name 'node_modules' -type d -prune",
        "uninstall:rm": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
        "uninstall:lock": "rm -f pnpm-lock.yaml && rm -f packages/**/pnpm-lock.yaml",
        "\n========== LIFECYCLE >> ==========": "",
        "postinstall": "pnpm --filter='*' composer:install",
        "start": "pnpm install && pnpm lando:start",
        "poststart": "pnpm --filter='*' build:gql",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.2",
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@commitlint/cz-commitlint": "^17.7.1",
        "@prettier/plugin-php": "^0.20.1",
        "@prettier/plugin-xml": "^3.2.0",
        "@snailicide/build-config": "^0.2.5",
        "@types/node": "^20.5.0",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "commitizen": "^4.3.0",
        "cross-var": "^1.1.0",
        "deepmerge": "^4.3.1",
        "eslint": "^8.47.0",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.0",
        "prettier": "^3.0.2",
        "prettier-plugin-jsdoc": "^1.0.1",
        "prettier-plugin-sh": "^0.13.1",
        "prettier-plugin-xml": "^0.1.0",
        "typescript": "^5.1.6",
        "validate-branch-name": "^1.3.0",
        "vite": "^4.4.9"
    },
    "config": {
        "deploy": {
            "remote": "bluehost:~/pyr-staging.gilliantunney.com/",
            "local": "./web/**/*"
        },
        "eslint": {
            "extensions": "ts,js,cjs,mjs",
            "path": "*",
            "config": ".eslintrc.cjs"
        },
        "prettier": {
            "extensions": "php,ts,js,cjs,mjs,cts,json,xml,yaml,yml,graphql,md",
            "path": "notes/**/*,*"
        },
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "packageManager": "pnpm@10.9.0+sha512.0486e394640d3c1fb3c9d43d49cf92879ff74f8516959c235308f5a8f62e2e19528a65cdc2a3058f587cde71eba3d5b56327c8c33a97e4c4051ca48a10ca2d5f"
}
